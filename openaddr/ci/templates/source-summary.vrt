<OGRVRTDataSource>
    <OGRVRTLayer name="{name}">
        <SrcDataSource relativeToVRT="1">{filename}</SrcDataSource>
        <GeometryType>wkbPolygon</GeometryType>
        <LayerSRS>EPSG:4326</LayerSRS>
        <GeometryField encoding="WKT" reportSrcColumn="FALSE" field="area"/>
    </OGRVRTLayer>
</OGRVRTDataSource>
